<UserControl x:Class="MusicAmp.Controls.ScrollingTextDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicAmp.Controls"
             SizeChanged="ScrollingTetDisplaySizeChanged"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="RootGrid">
        <Grid.Clip>
            <RectangleGeometry x:Name="ClipGeometry" />
        </Grid.Clip>
        <Canvas Background="Transparent" HorizontalAlignment="Left" x:Name="TextHost">
            <TextBlock x:Name="TitleBox" Text="{Binding DisplayText, Mode=OneWay}" Foreground="{Binding Foreground}"
                       FontFamily="{Binding FontFamily}" FontSize="{Binding FontSize}" HorizontalAlignment="Left" TextWrapping="NoWrap">
                <TextBlock.RenderTransform>
                    <TranslateTransform x:Name="TitleBoxTransform" />
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>
    </Grid>
</UserControl>
