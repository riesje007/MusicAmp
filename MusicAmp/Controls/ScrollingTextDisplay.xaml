<UserControl x:Class="MusicAmp.Controls.ScrollingTextDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicAmp.Controls"
             SizeChanged="ScrollingTextDisplaySizeChanged"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="RootGrid" >
        <Grid.Clip>
            <RectangleGeometry x:Name="ClipGeometry" />
        </Grid.Clip>
        <Canvas x:Name="TextHost" Width="{Binding ActualWidth, ElementName=TitleBox}" HorizontalAlignment="Stretch">
            <TextBlock x:Name="TitleBox" Text="{Binding DisplayText, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}" 
                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalAlignment="Center" Margin="2 2 2 5"
                       FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=UserControl}}" TextWrapping="NoWrap">
            </TextBlock>
            <Canvas.RenderTransform>
                <TranslateTransform x:Name="TitleBoxTransform" />
            </Canvas.RenderTransform>
        </Canvas>
    </Grid>
</UserControl>
