<UserControl x:Class="MusicAmp.Controls.PlaylistControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicAmp.Controls" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="5" Background="#90000000">
        </Border>
        <Border CornerRadius="5" Margin="2"  >
            <Border.Background>
                <LinearGradientBrush StartPoint="0 0" EndPoint="0 1" >
                    <GradientStop Color="#BBFFFFFF" Offset="0.0" />
                    <GradientStop Color="#20FFFFFF" Offset="0.07" />
                    <GradientStop Color="#20FFFFFF" Offset="0.8" />
                    <GradientStop Color="Transparent" Offset="1" />
                    <GradientStop Color="#20FFFFFF" Offset="0.5" />
                    <GradientStop Color="Transparent" Offset="0.1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border CornerRadius="5" Margin="2"  >
            <Border.Background>
                <LinearGradientBrush StartPoint="1 0.5" EndPoint="0.6 0.5" >
                    <GradientStop Color="#60FFFFFF" Offset="0.0" />
                    <GradientStop Color="Transparent" Offset="0.05" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border CornerRadius="5" Margin="2"  >
            <Border.Background>
                <LinearGradientBrush StartPoint="1 0" EndPoint="0.7 0.8" >
                    <GradientStop Color="#80FFFFFF" Offset="0.0" />
                    <GradientStop Color="Transparent" Offset="0.1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid Margin="5" >
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="PointerOver">
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="btnText" Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)" To="Goldenrod" Duration="0:0:0.1" />
                                                </Storyboard>
                                            </VisualState>
                                            <VisualState x:Name="Selected">
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)" To="LightYellow" Duration="0:0:0.1" />
                                                </Storyboard>
                                            </VisualState>
                                            <VisualState x:Name="PointerOverSelected">
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)" To="LightYellow" Duration="0:0:0.1" />
                                                </Storyboard>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <TextBlock x:Name="btnText" FontFamily="Segoe Fluent Icons" Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border CornerRadius="4" Background="#304020FF" Grid.Row="0"></Border>
            <StackPanel Orientation="Horizontal" >
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Padding" Value="4" />
                        <Setter Property="Background" Value="#20000000" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Margin" Value="1 0" />
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
                    </Style>
                </StackPanel.Resources>
                <Button ToolTipService.ToolTip="New playlist" Click="NewPlaylistClicked">
                    <TextBlock Text="&#xE8A5;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Open playlist..." Click="OpenFileClicked">
                    <TextBlock Text="&#xE838;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Save playlist" Click="SavePlaylistClicked">
                    <TextBlock Text="&#xE74E;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Save playlist as..." Click="SavePlaylistAsClicked">
                    <TextBlock Text="&#xE792;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Move selected item(s) up" Click="MoveUpClicked">
                    <TextBlock Text="&#xE74A;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Move selected item(s) down" Click="MoveDownClicked">
                    <TextBlock Text="&#xE74B;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Remove selected item(s)" Click="RemoveSelectedClicked">
                    <TextBlock Text="&#xE74D;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Clear playlist" Click="ClearPlaylistClicked">
                    <TextBlock Text="&#xE8BB;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Add files..." Click="AddFilesClicked">
                    <TextBlock Text="&#xE8A9;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Add folder..." Click="AddFolderClicked">
                    <TextBlock Text="&#xE8F4;" Foreground="{Binding Foreground}" />
                </Button>
                <Button ToolTipService.ToolTip="Randomize playlist" Click="RandomizeClicked">
                    <TextBlock Text="&#xE895;" Foreground="{Binding Foreground}" />
                </Button>
            </StackPanel>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" >
                <ListView ItemsSource="{Binding Path=SongPlaylist, Mode=OneWay}" Foreground="{Binding Foreground}" Background="#90000000" x:Name="PlayListView" 
                          SelectionMode="Extended"  >
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="MinHeight" Value="0" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Grid x:Name="RootGrid" Background="Transparent">
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal" />
                                                    <VisualState x:Name="PointerOver">
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" To="#20000000" Duration="0:0:0.1" />
                                                        </Storyboard>
                                                            </VisualState>
                                                    <VisualState x:Name="Selected">
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" To="#20FFFFFF" Duration="0:0:0.1" />
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="PointerOverSelected">
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" To="#50FFFFFF" Duration="0:0:0.1" />
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <ContentPresenter />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="PlaylistItem">
                            <Grid VerticalAlignment="Top" Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock FontFamily="Segoe UI" FontSize="10" Foreground="{Binding ElementName=PlayListView, Path=Foreground}" 
                                               Text="{Binding PlaylistItemDisplay, Mode=OneWay}" Grid.Column="0" />
                                <TextBlock FontFamily="Segoe UI" FontSize="10" Foreground="{Binding ElementName=PlayListView, Path=Foreground}"
                                               Text="{Binding DurationTextMinutes, Mode=OneWay}" Grid.Column="1" Margin="0 0 10 0" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
</Grid>
    </Grid>
</UserControl>
