<UserControl x:Class="MusicAmp.Controls.SongDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicAmp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="5" Background="#90000000" >
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding TimePlaying, RelativeSource={RelativeSource AncestorType=UserControl}}" FontFamily="Consolas" FontSize="36" x:Name="TimePlayingTextBlock" 
                           Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="5"
                           MouseLeftButtonDown="TimeBox_LeftButtonPressed" Visibility="Visible" Grid.Column="0" VerticalAlignment="Center" />
                <TextBlock Text="{Binding TimeRemaining, RelativeSource={RelativeSource AncestorType=UserControl}}" FontFamily="Consolas" FontSize="36" x:Name="TimeRemainingTextBlock" 
                           Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalAlignment="Center" Margin="5"
                           MouseLeftButtonDown="TimeBox_LeftButtonPressed" Visibility="Collapsed" Grid.Column="0" />
                <local:ScrollingTextDisplay Grid.Column="1" Margin="12 5 0 0" VerticalAlignment="Center"
                                            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="18" 
                                            DisplayText="{Binding SongTitle, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Grid>
        </Border>
        <Border CornerRadius="5" Margin="2" IsHitTestVisible="False">
            <Border.Background>
                <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                    <GradientStop Color="#BBFFFFFF" Offset="0.0" />
                    <GradientStop Color="#20FFFFFF" Offset="0.07" />
                    <GradientStop Color="#20FFFFFF" Offset="0.8" />
                    <GradientStop Color="#BBFFFFFF" Offset="1" />
                    <GradientStop Color="#20FFFFFF" Offset="0.5" />
                    <GradientStop Color="Transparent" Offset="0.1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border CornerRadius="5" Margin="2" IsHitTestVisible="False">
            <Border.Background>
                <LinearGradientBrush StartPoint="1 0.5" EndPoint="0.6 0.5">
                    <GradientStop Color="#60FFFFFF" Offset="0.0" />
                    <GradientStop Color="Transparent" Offset="0.05" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border CornerRadius="5" Margin="2" IsHitTestVisible="False">
            <Border.Background>
                <LinearGradientBrush StartPoint="1 0" EndPoint="0.7 0.8">
                    <GradientStop Color="#80FFFFFF" Offset="0.0" />
                    <GradientStop Color="Transparent" Offset="0.1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
